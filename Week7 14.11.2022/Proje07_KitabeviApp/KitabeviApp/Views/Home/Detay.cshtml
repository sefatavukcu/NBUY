@model Kitap
@{
    ViewData["Title"] = "Detay";
}
<h1 class="display-6">@Model.Ad</h1>
<div class="row">
    <div class="col-3">
        <div>Buraya Resim gelecek</div>
    </div>
    <div class="col-9">
        <div class="card">
            <div class="card-header">
                @Model.Yazar.Ad
            </div>
            <div class="card-body">
                <h6>Özet</h6>
                <p>@Model.Ozet</p>
            </div>
            <div class="card-footer">
                <p>Basım Yılı: @Model.BasimYili --- Sayfa Sayısı: @Model.SayfaSayisi --- Kategori: <a asp-controller="Home" asp-action="KitapListesi" asp-route-id=@Model.KategoriId>@Model.Kategori.Ad</a></p>
            </div>
        </div>
    </div>
</div>