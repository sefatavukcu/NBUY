@model ProductViewModel
<h1 class="display-6">Yeni Ürün Ekle</h1>
<hr />
<form 
	asp-controller="Product"
	asp-action="Create"
	method="post">

	<div class="row">
		<div class="col-8">
			<div class="row mb-3">
				<div class="col-2">
					<label asp-for="Name" class="form-label"></label>
				</div>
				<div class="col-8">
					<input type="text" asp-for="Name" class="form-control" />
				</div>
				<span asp-validation-for="Name"></span>
			</div>
			<div class="row mb-3">
				<div class="col-2">
					<label asp-for="Description" class="form-label"></label>
				</div>
				<div class="col-8">
					<input type="text" asp-for="Description" class="form-control" />
				</div>
				<span asp-validation-for="Description"></span>
			</div>
			<div class="row mb-3">
				<div class="col-2">
					<label asp-for="Price" class="form-label"></label>
				</div>
				<div class="col-8">
					<input type="text" asp-for="Price" class="form-control" />
				</div>
				<span asp-validation-for="Price"></span>
			</div>
			<div class="row mb-3">
				<div class="col-2">
					<label asp-for="ImageUrl" class="form-label"></label>
				</div>
				<div class="col-8">
					<input type="text" asp-for="ImageUrl" value="1.png" class="form-control" />
				</div>
				<span asp-validation-for="ImageUrl"></span>
			</div>
		</div>
		<div class="col-4">
			@foreach (var category in Model.Categories)
			{
				<div>
					<input type="checkbox" class="form-check-input" value="@category.Id" name="selectedCategoryIds" />
					<label class="form-label">@category.Name</label>
				</div>
			}
		</div>
	</div>
	<button type="submit" 
		class="btn btn-success"
		>Kaydet</button>
</form>