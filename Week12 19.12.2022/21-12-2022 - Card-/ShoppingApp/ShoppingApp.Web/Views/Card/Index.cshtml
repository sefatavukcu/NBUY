@model CardDto
<h6 class="display-6">Sepet</h6>
<hr />
@if (Model.CardItems.Count == 0)
{
    <div class="row">
        <div class="alert alert-danger">
            Sepetinizde ürün bulunmamaktadır.
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-8">
            <h6 class="display-6">Ürünler</h6>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>Ürün</th>
                        <th>Fiyatı</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var cardItem in Model.CardItems)
                    {
                        <tr>
                            <td>
                                <img src="~/images/@cardItem.ImageUrl" width="50" />
                            </td>
                            <td>@cardItem.ProductName</td>
                            <td>@cardItem.ItemPrice</td>
                            <td><input type="number" min="1" max="100" name="quantity" value="@cardItem.Quantity" /></td>

                            <td>@(cardItem.ItemPrice * cardItem.Quantity)</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            <a class="btn btn-success" asp-controller="Card" asp-action="AddToCard">Değişiklikleri Kaydet</a>
        </div>
        <div class="col-4">
            <h6 class="display-6">Özet Bilgiler</h6>
            <table class="table table-sm">
                <tbody>
                    <tr>
                        <th>Sepet Toplamı</th>
                        <td>@Model.TotalPrice()</td>
                    </tr>
                    <tr>
                        <th>Kargo</th>
                        <td>Ücretsiz</td>
                    </tr>
                        <tr>
                        <th>Ödenecek Toplam Tutar</th>
                        <td>@Model.TotalPrice()</td>
                    </tr>
                </tbody>
            </table>
            <div>
                <a href="/" class="btn btn-success">Alışverişe Devam Et</a>
                <a href="/" class="btn btn-primary">Sepeti Onayla</a>
            </div>
        </div>
    </div>
}
